{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Install Req.",
      "type": "shell",
      "command": "bash",
      "args": [
        "./install_taskfile.sh"
      ],
      "presentation": {
        "echo": true,
        "focus": true,
        "panel": "shared",
        "showReuseMessage": true,
        "clear": false
      },
      "problemMatcher": [],
      "options": {
        "statusbar": {
        "label": "$(fold-down) Install Tools"
        }
      },
    },
    {
      "label": "Build",
      "type": "process",
      "command": "task",
      "args": [
        "build"
      ],
      "presentation": {
        "echo": true,
        "focus": true,
        "panel": "shared",
        "showReuseMessage": true,
        "clear": false
      },
      "problemMatcher": [],
      "options": {
        "statusbar": {
        "label": "$(extensions-view-icon) Build"
        }
      },
    },
    {
      "label": "Start",
      "type": "process",
      "command": "task",
      "args": [
        "start"
      ],
      "presentation": {
        "echo": true,
        "focus": true,
        "panel": "shared",
        "showReuseMessage": true,
        "clear": false
      },
      "problemMatcher": [],
      "options": {
        "statusbar": {
        "label": "$(play-circle) Start"
        }
      },
    },
    {
      "label": "Stop",
      "type": "process",
      "command": "task",
      "args": [
        "stop"
      ],
      "presentation": {
        "echo": true,
        "reveal": "silent",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": true,
        "clear": false
      },
      "problemMatcher": [],
      "options": {
        "statusbar": {
        "label": "$(debug-stop) Stop"
        }
      },
    },
    {
      "label": "Restart",
      "type": "process",
      "command": "task",
      "args": [
        "restart"
      ],
      "presentation": {
        "echo": true,
        "reveal": "silent",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": true,
        "clear": false
      },
      "problemMatcher": [],
      "options": {
        "statusbar": {
        "label": "$(issue-reopened) Restart"
        }
      },
    },

    {
      "label": "View Logs",
      "type": "process",
      "command": "task",
      "args": [
        "logs"
      ],
      "presentation": {
        "echo": true,
        "focus": true,
        "panel": "shared",
        "showReuseMessage": true,
        "clear": false
      },
      "problemMatcher": [],
      "options": {
        "statusbar": {
        "label": "$(search) View logs"
        }
      },
    }
  ]
}
